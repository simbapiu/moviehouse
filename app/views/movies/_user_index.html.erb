<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
<% @movies.each do |movie| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(movie.image_url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
        <dt><%= movie.name %></dt>
        <dd><%= movie.code %></dd>
        <dd><%= movie.year %></dd>
        <dd><%= movie.genre %></dd>
        <dd> <span class="price"><%= number_to_currency(movie.price) %></span> </dd>
      </dl>
    </td>
    <td class="list_action">
      <button type="button" class="btn btn-danger"><%= button_to 'Add to Cart', line_items_path(movie_id: movie) %></button>
    </td>
  </tr>
<% end %>
</table>

<br />

